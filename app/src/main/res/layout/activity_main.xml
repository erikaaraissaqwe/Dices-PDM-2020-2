<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mensagemTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="15dp"
        android:padding="7dp"
        android:text="@string/result"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/jogarBt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/jogarBt"
        android:layout_width="361dp"
        android:layout_height="106dp"
        android:layout_marginBottom="26dp"
        android:layout_weight="1"
        android:onClick="onClick"
        android:text="@string/jogar"
        app:layout_constraintBottom_toTopOf="@+id/resultadoTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mensagemTv"
        tools:ignore="ButtonStyle,MissingConstraints,OnClick" />

    <TextView
        android:id="@+id/resultadoTv"
        android:layout_width="299dp"
        android:layout_height="100dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="62dp"
        android:padding="7dp"
        android:text="@string/nao_lancado"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/resultadoIv2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jogarBt"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/resultadoIv2"
        android:layout_width="215dp"
        android:layout_height="81dp"
        android:layout_marginBottom="76dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultadoIv"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/resultadoIv"
        android:layout_width="236dp"
        android:layout_height="77dp"
        android:layout_marginBottom="35dp"
        app:layout_constraintBottom_toTopOf="@+id/resultadoIv2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultadoTv"
        tools:ignore="MissingConstraints" />



</androidx.constraintlayout.widget.ConstraintLayout>